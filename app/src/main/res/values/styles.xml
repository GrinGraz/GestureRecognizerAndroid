<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="caja_seccion">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <!--<item name="android:background">@drawable/shadow_5</item>-->
    </style>

    <style name="titulo_seccion">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/negro</item>
    </style>


    <style name="titulo_principal">

        <item name="android:textSize">@dimen/titulo_seccion</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:layout_marginLeft">@dimen/margen_enano</item>
    </style>

    <style name="boton_generico">
        <item name="android:layout_margin">@dimen/margen_enano</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="boton_dialog" parent="boton_generico">
        <item name="android:background">@drawable/bg_btn_dialog</item>
    </style>

    <style name="boton_crear_usuario" parent="boton_generico">
        <item name="android:background">@drawable/bg_btn_crear_usuario</item>
    </style>

    <style name="boton_gris">
        <item name="android:background">@drawable/bg_btn_dialog</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

</resources>
